<h1><%=@team.team_name %>のKPT</h1>
<div>
<h3><%=Date.today.strftime('%m/%d') %></h3>
</div>

<table>
  <thead>
    <tr>
      <th>ニックネーム </th>
      <th>Keep </th>
      <th>Problem </th>
      <th>Try </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@today_kpts.each do |kpt| %>
      <tr>
        <td><%=kpt.user.name %></td>
        <td style="height: 150px; width: 350px; padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
          <%=safe_join(kpt.keep_content.split("\n"),tag(:br))%>
        </td> 
        <td style="height: 150px; width: 350px; padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
          <%=safe_join(kpt.problem_content.split("\n"),tag(:br))%>
        </td>
        <td style="height: 150px; width: 350px; padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
          <%=safe_join(kpt.try_content.split("\n"),tag(:br))%>
        </td>
      </tr>
    <% end %>
  </tbody> 
</table>

<br>
<%= link_to '戻る', teams_path %>