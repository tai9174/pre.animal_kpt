<h1><%= current_user.name %>のKpts</h1>

<table>
  <thead>
    <tr>
      <th>Date </th>
      <th>Keep </th>
      <th>Problem </th>
      <th>Try </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kpts.each do |kpt| %>
      <tr>
        <td><%= kpt.created_at.strftime('%m/%d') %></td>
        <td style="height: 150px; width: 250px; padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
          <%=safe_join(kpt.keep_content.split("\n"),tag(:br))%>
          <%
=begin%>
 <div id="square-button"></div>
          <div id="square-button"></div>
          <div id="square-button"></div> 
<%
=end%>
        </td>
        <td style="height: 150px; width: 250px; padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
          <%=safe_join(kpt.problem_content.split("\n"),tag(:br))%>
        <td style="height: 150px; width: 250px; padding: 10px; margin-bottom: 10px; border: 1px solid #333333;">
          <%=safe_join(kpt.try_content.split("\n"),tag(:br))%>
        
        </td>
        <td><%= link_to '詳細', kpt %></td>
        <td><%= link_to '編集', edit_kpt_path(kpt) %></td>
        <td><%= link_to '削除', kpt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



